<Window x:Class="wpfPass.RemindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="143.281" Width="238.196" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon=".\Icon.ico">
    <Grid>
        <TextBox x:Name="EmailBox" Style="{StaticResource placeHolder}" Tag="Enter your e-mail" HorizontalAlignment="Left" Height="23" Margin="10,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="ResetButton" Content="Reset password" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="97" Height="20" Click="ResetButton_Click" />
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="126,68,0,0" VerticalAlignment="Top" Width="89" IsCancel="True" Height="20" />

    </Grid>
</Window>
