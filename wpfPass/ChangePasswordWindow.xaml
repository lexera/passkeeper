<Window x:Class="wpfPass.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="244.816" Width="238.196" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon=".\Icon.ico">
    <Grid>
        <TextBox x:Name="OldPasswordBox" Style="{StaticResource placeHolder}" Tag="Old password" HorizontalAlignment="Left" Height="23" Margin="10,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <TextBox x:Name="NewPasswordBox" Style="{StaticResource placeHolder}" Tag="New password" HorizontalAlignment="Left" Height="23" Margin="10,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>
        <TextBox x:Name="ConfirmNewPasswordBox" Style="{StaticResource placeHolder}" Tag="Confirm new password" HorizontalAlignment="Left" Height="23" Margin="10,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>

        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="97" Height="20" Click="SaveButton_Click" />
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="126,167,0,0" VerticalAlignment="Top" Width="89" IsCancel="True" Height="20" />

    </Grid>
</Window>
