<Window x:Class="wpfPass.AddingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Password" Height="241.19" Width="212.715" ResizeMode="NoResize" ShowInTaskbar="False"
        Icon=".\Icon.ico"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Style="{StaticResource placeHolder}" Name="LocationBox" Tag="Location" HorizontalAlignment="Left" Height="23" Margin="15,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <TextBox Style="{StaticResource placeHolder}" Name="LoginBox" Tag="Login" HorizontalAlignment="Left" Height="23" Margin="15,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <TextBox Style="{StaticResource placeHolder}" Name="PasswordBox" Tag="Password" HorizontalAlignment="Left" Height="23" Margin="15,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="15,165,0,0" Click="AddButton_Click" />
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="111,165,0,0" IsCancel="True"/>

    </Grid>
</Window>
